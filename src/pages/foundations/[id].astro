---
import Markdown from "../../layouts/Markdown.astro";
import {render} from "astro:content";
import { getCollection } from "astro:content";


export async function getStaticPaths() {
  const foundations = await getCollection("foundations");

 const paths = foundations.map((foundation) => ({
    params: { id: foundation.id.toString() },
    props: {
        foundation: foundation,
    },
  }));
    return paths;
}
const { foundation} = Astro.props;
const { Content } = await render(foundation);

---

<Markdown>
  <a href="/#foundations">Foundations</a>
  <h2><span>{foundation.data.title}</span></h2>
  <Content />
</Markdown>

<style>
  a {
    display: block;
    margin-bottom: var(--sp-m);
  }
</style>